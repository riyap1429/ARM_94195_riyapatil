void led_init(void)
{
	RCC->AHB1ENR |= BV(3);

	GPIOD->MODER &= ~(BV(25) | BV(27) | BV(29) | BV(31));
	GPIOD->MODER |=  (BV(24) | BV(26) | BV(28) | BV(30));

	GPIOD->OTYPER &= ~(BV(12) | BV(13) | BV(14) | BV(15));

	GPIOD->OSPEEDR &= ~(BV(24) | BV(25) | BV(26) | BV(27)
	                   | BV(28) | BV(29) | BV(30) | BV(31));

	GPIOD->PUPDR &= ~(BV(24) | BV(25) | BV(26) | BV(27)
	                  | BV(28) | BV(29) | BV(30) | BV(31));
}

void led_on1(void)  { GPIOD->ODR |= BV(12); }
void led_off1(void) { GPIOD->ODR &= ~BV(12); }

void led_on2(void)  { GPIOD->ODR |= BV(13); }
void led_off2(void) { GPIOD->ODR &= ~BV(13); }

void led_on3(void)  { GPIOD->ODR |= BV(14); }
void led_off3(void) { GPIOD->ODR &= ~BV(14); }

void led_on4(void)  { GPIOD->ODR |= BV(15); }
void led_off4(void) { GPIOD->ODR &= ~BV(15); }

/* Q.3 Running LED Left to Right */
void led_run_lr(void)
{
	led_on1();
	DelayMs(500);
	led_off1();

	led_on2();
	DelayMs(500);
	led_off2();

	led_on3();
	DelayMs(500);
	led_off3();

	led_on4();
	DelayMs(500);
	led_off4();
}

